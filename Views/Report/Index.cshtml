@{
    ViewData["Title"] = "Schedule Report";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Schedule Report Generation</h5>
            <p class="card-text">Click below to schedule automatic report generation.</p>

            <a href="@Url.Action("ScheduleReport", "Report")" class="btn btn-success">
                <i class="fas fa-calendar-alt"></i> Go to Schedule Report
            </a>
        </div>
    </div>

    <!-- Display Feedback Message -->
    @if (TempData["Message"] != null)
    {
            <div class="alert alert-success mt-4">
            @TempData["Message"]
            </div>
    }
</div>
